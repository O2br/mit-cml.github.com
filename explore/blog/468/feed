        &lt;h2 class=&quot;element-invisible&quot;&gt;&lt;a href=&quot;/file/draggedtolefttoppng&quot;&gt;DraggedToLeftTop.PNG&lt;/a&gt;&lt;/h2&gt;
    
  
  &lt;div class=&quot;content&quot;&gt;
    &lt;img typeof=&quot;foaf:Image&quot; class=&quot;image-style-none&quot; src=&quot;http://explore.appinventor.mit.edu/sites/explore.appinventor.mit.edu/files/blog/DraggedToLeftTop.PNG&quot; width=&quot;621&quot; height=&quot;919&quot; alt=&quot;&quot; /&gt;  &lt;/div&gt;

  
&lt;/div&gt;
              &lt;/figure&gt;
          &lt;figure class=&quot;field-item&quot;&gt;
        &lt;div id=&quot;file-22041&quot; class=&quot;file file-image file-image-png&quot;&gt;

